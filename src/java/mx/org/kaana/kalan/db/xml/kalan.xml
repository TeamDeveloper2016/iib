    <unit id="TcKalanCitasDto">
      <select id="row">
select      
  *
from      
  tc_kalan_citas
where 
  {condicion} 
      </select>
      <select id="identically">
select      
  *
from      
  tc_kalan_citas
where      
  consecutivo = '{consecutivo}'
      </select>
			<select id="siguiente">
select
  max(orden)+ 1 as siguiente
from 
  tc_kalan_citas
where
  ejercicio= {ejercicio} 
  and orden{operador} 900000			
			</select>
      <update id="recordatorio">
update 
  tc_kalan_citas
set
  recordado= now()
where
  id_cita= {idCita}                
      </update>
      <update id="notificacion">
update 
  tc_kalan_citas
set
  notificado= now()
where
  id_cita= {idCita}                
      </update>
    </unit>   
