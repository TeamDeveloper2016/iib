      </select>
      <select id="identically">
select      
  *
from      
  tc_kalan_mensajes_detalles
where      
  id_cliente = {idCliente} and id_mensaje = {idMensaje}
      </select>
    </unit>    
    <unit id="TcKalanMensajesBitacoraDto">
