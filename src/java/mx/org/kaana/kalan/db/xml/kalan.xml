where      
  id_cita = {idCita} and id_articulo = {idArticulo}
      </select>
      <select id="detalle">
select      
  tc_kalan_citas_detalles.id_cita_detalle as id_key,
  tc_kalan_citas_detalles.*
from      
  tc_kalan_citas_detalles
where      
  id_cita = {idCita}
      </select>
      <delete id="rows">
delete from      
